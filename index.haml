%html{:lang => "en"}
  %head
    / Meta Tags =======================================|>
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "This is a Music Website As a Clone Project for Spotify. Have Fun", :name => "description"}/
    %meta{:content => "Musical, Spotify, 'Super NeX',", :name => "keywords"}/
    / CSS =================================================|>
    %link{:href => "src/css/style.sass", :rel => "stylesheet", :type => "text/css"}/
    / Other Links ==========================================
    %link{:href => "public/assets/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    %link{:href => "", :rel => "home"}/
