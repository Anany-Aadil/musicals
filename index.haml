    .Bottom
      %input#mainProgressBar{:max => "1000", :min => "0", :name => "range", :type => "range", :value => "0"}/
      .iconRow
        .iconRow
          .cent.icons
            %i#previous.btns.fas.fa-2x.fa-backward
          .cent.icons
            %i#mainPlay.btns.far.fa-2x.fa-play-circle
          .cent.icons
            %i#next.btns.fas.fa-2x.fa-forward
          %span.icons
            %i#vol.btns.fas.fa-2x.fa-volume-up
              %input#volumeBar{:max => "100", :min => "0", :name => "volume", :type => "range", :value => "90"}/
          %span.icons
            %i#loop.btns.fas.fa-2x.fa-retweet
            %i#checkMark.fas.fa-check
      #gif1.gifs
        %img.gifPlay{:src => "public/assets/play.gif"}/
